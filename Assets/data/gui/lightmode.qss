    color: #1a1a1a;
}

/* Force black text on all labels inside stacked widgets */
QStackedWidget QLabel {
    color: #1a1a1a;
}

/* Force black text on all tree widgets */
QTreeWidget {
    color: #1a1a1a;
}

/* Info labels with specific backgrounds */
QLabel[wordWrap="true"] {
    color: #1a1a1a;
}

/* Map tab sidebar text */
QWidget#mapSidebar QLabel {
    color: #1a1a1a;
}

/* Ensure search labels are black */
QLabel {
    color: #1a1a1a;
}

/* Guild tree in map tab - ensure child items have proper colors */
