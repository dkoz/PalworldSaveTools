    color: #1a1a1a;
}

QDialog QCheckBox {
    color: #1a1a1a;
}

/* Tooltip styling for light mode */
QToolTip {
    background-color: #ffffff;
    color: #1a1a1a;
    border: 1px solid rgba(0,0,0,0.2);
    padding: 4px;
}

/* ===== Loading Window Styles ===== */

