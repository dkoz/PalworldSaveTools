QTreeWidget#searchTree::item:selected {
    background-color: rgba(37,150,190,0.25);
    color: #1A5F8D;
}

QTreeWidget#searchTree::item:hover {
    background-color: rgba(37,150,190,0.1);
}

QTreeWidget#searchTree QHeaderView::section {
