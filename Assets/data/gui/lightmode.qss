/* Background gradient */
QWidget#central {
    background: qlineargradient(spread:pad, x1:0.0, y1:0.0, x2:1.0, y2:1.0,
                stop:0 #e6ecef, stop:0.5 #bdd5df, stop:1 #a7c9da);
    color: #000000;
    font-family: "Segoe UI", Roboto, Arial;
}

/* Version chip */
QLabel#versionChip {
    background: rgba(50, 165, 218, 0.5);
    border: 1px solid rgba(125,211,252,0.8);
    padding: 6px 10px;
    border-radius: 10px;
    font-size: 17px;
    color: #000000;
}

/* PULSE STYLE: Applied when the pulse="true" dynamic property is set */
QLabel#versionChip[pulse="true"] {
    background: #FFD24D; /* Bright Gold/Amber for pulsing */
    border: 1px solid #FFD24D;
    color: #000000; /* Contrast text color */
}

/* Game version chip */
QLabel#gameVersionChip {
    background: rgba(34, 197, 94, 0.50);
    border: 1px solid rgba(35, 202, 96, 0.8);
    padding: 6px 10px;
    border-radius: 10px;
    font-size: 17px;
    color: #000000;
}

/* Menu chip button */
QPushButton#menuChip {
    background: rgba(139, 92, 246, 0.15);
    border: 1px solid rgba(139, 92, 246, 0.3);
    padding: 6px 10px;
    border-radius: 10px;
    font-size: 17px;
    color: #6D28D9;
}
QPushButton#menuChip:hover {
    background: rgba(139, 92, 246, 0.25);
    border: 1px solid rgba(139, 92, 246, 0.45);
    color: #5B21B6;
}
QPushButton#menuChip:pressed {
    background: rgba(139, 92, 246, 0.35);
}

/* Control chips */
QPushButton#controlChip {
    background: rgba(128,128,128,0.4);
    border: 1px solid rgba(128,128,128,0.8);
    padding: 8px 12px;
    border-radius: 10px;
    font-size: 20px;
    color: #000000;
    text-align: center;
}
QPushButton#controlChip:hover {
    background: rgba(128,128,128,0.2);
    border: 1px solid rgba(128,128,128,0.3);
}

/* Sidebar collapse chip */
QPushButton#sidebarChip {
    background: rgba(255,210,77,0.15);
    border: 1px solid rgba(255,210,77,0.30);
    padding: 6px 10px;
    border-radius: 10px;
    font-size: 17px;
    color: #D4A800;
}
QPushButton#sidebarChip:hover {
    background: rgba(255,210,77,0.25);
    border: 1px solid rgba(255,210,77,0.45);
    color: #B38F00;
}
QPushButton#sidebarChip:pressed {
    background: rgba(255,210,77,0.35);
    border: 1px solid rgba(255,210,77,0.55);
}

/* Theme toggle chip */
QPushButton#themeChip {
    background: transparent;
    border: none;
    padding: 8px 12px;
    font-size: 20px;
    color: #b8a830;
    text-align: center;
}
QPushButton#themeChip:hover {
    color: #d4c238;
}

/* Discord chip */
QPushButton#discordChip {
    background: transparent;
    border: none;
    padding: 8px 12px;
    font-size: 20px;
    color: #5865f2;
    text-align: center;
}
QPushButton#discordChip:hover {
    color: #4752c4;
}

/* Scroll area */
QScrollArea {
    border-radius: 10px;
}

/* Content widget */
QWidget#contentWidget {
    background: rgba(230,240,255,1.0);
    border-radius: 10px;
}

/* Card */
QFrame#glass {
    background: rgba(240,245,255,1.0);
    border-radius: 10px;
    border: 1px solid rgba(0,0,0,0.08);
    padding: 10px;
}

/* Title area */
QLabel#title {
    font-size: 20px;
    font-weight: 800;
    color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, stop:0 #1e3a8a, stop:1 #3730a3);
    letter-spacing: 1px;
}

/* Tool widget (composite row) */
QWidget.toolRow {
    background: transparent;
    border: 2px solid rgba(200,200,200,0.3);
    border-radius: 8px;
    padding: 4px;
    margin: 4px 0px;
}
QWidget.toolRow:hover {
    background: rgba(37,150,190,0.1);
    border: 2px solid #2596be;
}



/* Tool button tightened */
QPushButton.toolCard {
    background: transparent;
    border: none;
    text-align: left;
    padding: 4px 6px;
    font-weight: 600;
    min-height: 40px;
    color: #000000;
}
QPushButton.toolCard:hover {
    background: transparent;
    color: #000000;
}

/* Icon label */
QLabel.toolIcon {
    background: rgba(240,240,240,0.5);
    border-radius: 6px;
    padding: 4px;
    min-width: 30px;
    min-height: 30px;
    max-width: 30px;
    max-height: 30px;
}

/* Category title */
QLabel.categoryTitle {
    font-size: 15px;
    font-weight: 700;
    color: #000000;
}

/* Header buttons */
QToolButton#hdrBtn {
    border: none;
    background: transparent;
    padding: 6px;
    margin-left: 6px;
}
QToolButton#hdrBtn:hover {
    background: rgba(200,220,255,0.3);
    border-radius: 6px;
}



/* Footer */
QStatusBar {
    background: qlineargradient(spread:pad, x1:0.0, y1:0.0, x2:1.0, y2:1.0,
                stop:0 #e6ecef, stop:0.5 #bdd5df, stop:1 #a7c9da);
    color: #000000;
    border-top: 1px solid rgba(220,220,220,0.5);
}

/* Menu */
QMenu {
    background: qlineargradient(spread:pad, x1:0.0, y1:0.0, x2:1.0, y2:1.0,
                stop:0 rgba(230,236,239,0.95), stop:0.5 rgba(189,213,223,0.95), stop:1 rgba(167,201,218,0.95));
    border: 1px solid rgba(0,0,0,0.1);
    border-radius: 8px;
    font-size: 16px;
    color: #000000;
}
QMenu::item {
    padding: 8px 12px;
    background: transparent;
    border-radius: 4px;
    color: #000000;
}
QMenu::item:selected {
    background: rgba(37,99,235,0.4);
    color: #ffffff;
}
QMenu::item:disabled {
    color: rgba(0,0,0,0.4);
}
QMenu::separator {
    height: 1px;
    background: rgba(0,0,0,0.1);
    margin: 4px 0px;
}

/* General QPushButton */
QPushButton {
    background-color: #cccccc;
    color: #000000;
    padding: 6px;
    border-radius: 4px;
}
QPushButton:hover {
    background-color: #bbbbbb;
}

/* QLineEdit */
QLineEdit {
    background-color: rgba(0,0,0,0.05);
    color: #000000;
    border: 1px solid rgba(0,0,0,0.2);
    border-radius: 4px;
    padding: 4px;
}

/* QLabel */
QLabel {
    color: #000000;
}

/* QComboBox */
QComboBox {
    background-color: #ffffff;
    color: #000000;
    border: 1px solid #cccccc;
    padding: 4px;
    border-radius: 4px;
}
QComboBox::drop-down {
    border: none;
}

/* QTreeWidget */
QTreeWidget {
    background: transparent;
    color: #000000;
}
QTreeWidget QHeaderView::section {
    background-color: #f0f0f0;
    color: #000000;
    padding: 8px;
    border: 1px solid rgba(0,0,0,0.1);
    height: 28px;
}

/* Ensure all QTreeWidget text is black in light mode */
QTreeWidget {
    background: transparent;
    color: #000000;
}
QFrame#treePanel {
    background-color: transparent;
}

QTreeWidget QHeaderView::section:hover {
    background-color: rgba(37,99,235,0.2);
}

/* QProgressBar */
QProgressBar {
    border: 1px solid rgba(0,0,0,0.1);
    border-radius: 8px;
    height: 14px;
    text-align: center;
    background: rgba(255,255,255,0.60);
    color: #000000;
}
QProgressBar::chunk {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, stop:0 #1e3a8a, stop:1 #3730a3);
    border-radius: 8px;
}

/* QCheckBox */
QCheckBox {
    color: #000000;
}

/* QDialog */
QDialog {
    background: qlineargradient(spread:pad, x1:0.0, y1:0.0, x2:1.0, y2:1.0,
                stop:0 #e6ecef, stop:0.5 #bdd5df, stop:1 #a7c9da);
    color: #000000;
    font-family: "Segoe UI", Roboto, Arial;
}

/* Conversion Dialog Styling */
QDialog QLabel#dialogTitle {
    font-size: 13px;
    font-weight: 600;
    color: #1a5a7a;
    padding-bottom: 4px;
}

QFrame#dialogSeparator {
    background: rgba(37,150,190,0.3);
    max-height: 1px;
    border: none;
}

QPushButton#dialogOption {
    background: rgba(37,150,190,0.1);
    border: 1px solid rgba(37,150,190,0.2);
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 11px;
    color: #1a1a1a;
}

QPushButton#dialogOption:hover {
    background: rgba(37,150,190,0.18);
    border-color: rgba(37,150,190,0.35);
    color: #000000;
}

QPushButton#dialogCancel {
    background: rgba(0,0,0,0.04);
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 5px;
    padding: 6px 12px;
    font-size: 10px;
    color: #666666;
}

QPushButton#dialogCancel:hover {
    background: rgba(0,0,0,0.06);
    color: #000000;
}

/* Results widget container */
QWidget#resultsWidget {
    background: rgba(240,245,255,1.0);
    border-left: 2px solid rgba(0,0,0,0.04);
}

/* Splitter handle */
QSplitter::handle:horizontal {
    background: rgba(0,0,0,0.05);
    width: 2px;
}

QSplitter::handle:horizontal:hover {
    background: rgba(37,150,190,0.4);
    width: 4px;
}

/* Context Menu Styling */
QMenu {
    background-color: rgba(255,255,255,0.95);
    border: 1px solid rgba(37,150,190,0.3);
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    background-color: transparent;
    padding: 6px 20px;
    border-radius: 4px;
    color: #2C3E50;
}

QMenu::item:selected {
    background-color: rgba(37,150,190,0.2);
    color: #000000;
}

QMenu::item:selected:!enabled {
    background-color: transparent;
}

QMenu::separator {
    height: 1px;
    background: rgba(0,0,0,0.15);
    margin: 4px 10px;
}

/* Tab Widget Styling */
QTabWidget::pane {
    background: rgba(240,245,255,0.95);
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 10px;
    padding: 12px;
}

QTabBar::tab {
    background: rgba(200,215,235,0.5);
    border: 1px solid rgba(0,0,0,0.08);
    border-bottom: none;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    padding: 8px 16px;
    margin-right: 2px;
    color: #2C3E50;
    font-weight: 600;
}

/* Custom tab bar styling for separate tab bar */
QWidget#tabBarContainer {
    border-bottom: 1px solid rgba(0,0,0,0.08);
}

QTabBar#customTabBar {
    background: transparent;
    margin: 8px 10px 0px 10px;
}

QTabBar#customTabBar::tab {
    background: transparent;
    border: none;
    margin-right: 8px;
    margin-bottom: 4px;
    padding: 10px 18px;
}

/* Tab Content Widgets - Ensure proper theming for all tab content */
QWidget#playersTab, QWidget#guildsTab, QWidget#basesTab, QWidget#mapTab, QWidget#toolsTab, QWidget#exclusionsTab {
    background: rgba(240, 255, 249, 0.85);
    border-radius: 10px;
    color: #000000;
}

/* Stacked Widget and Tab Content Body */
QStackedWidget {
    background: rgba(240,245,255,0.85);
    border-radius: 10px;
    color: #000000;
    padding: 10px;
    margin: 10px;
    border: 2px solid rgba(0,0,0,0.15);
}

/* Ensure all tab content widgets inherit theme colors */
QStackedWidget QWidget {
    background: transparent;
    color: #000000;
}

QStackedWidget QLabel {
    color: #000000;
}

QStackedWidget QLineEdit {
    background-color: rgba(0,0,0,0.05);
    color: #000000;
    border: 1px solid rgba(0,0,0,0.2);
    border-radius: 4px;
    padding: 4px;
}

QStackedWidget QComboBox {
    background-color: #ffffff;
    color: #000000;
    border: 1px solid #cccccc;
    padding: 4px;
    border-radius: 4px;
}

QStackedWidget QPushButton {
    background-color: #cccccc;
    color: #000000;
    padding: 6px;
    border-radius: 4px;
}

QScrollArea#toolsScrollArea {
    background: transparent;
    border: none;
}

/* Results Widget Text Colors */
QWidget#resultsWidget QLabel {
    color: #2C3E50;  /* Dark text for light background */
}

QWidget#resultsWidget QLabel#sectionHeader {
    color: #1A365D;
    background: rgba(37,150,190,0.1);
    border-color: rgba(37,150,190,0.2);
}

/* Stats Panel in Light Mode */
QWidget#statsGrid {
    background: rgba(240,245,255,0.95);
}

QLabel#statsHeader {
    color: #1A202C;
}

QLabel#statsField {
    color: #4A5568;
}

QLabel#statsValue {
    color: #1A202C;
}

/* ===== Results Panel Refinement ===== */

/* Glass Panel Effect */
QFrame#glassPanel {
    background: rgba(240,245,255,0.75);
    border-radius: 10px;
    border: 1px solid rgba(100,100,100,0.8);
    padding: 12px;
    margin: 4px 0px;
}

/* Section Headers (Chip Style) */
QLabel#sectionHeader {
    background: rgba(37,150,190,0.1);
    border: 1px solid rgba(100,100,100,0.8);
    padding: 8px 12px;
    border-radius: 8px;
    color: #1A365D;
}

/* Value Cards */
QFrame#valueCard {
    background: rgba(255,255,255,0.6);
    border: 1px solid rgba(100,100,100,0.8);
    border-radius: 6px;
    padding: 8px 10px;
    margin: 2px 0px;
}

QFrame#valueCard:hover {
    background: rgba(37,150,190,0.12);
    border-color: rgba(37,150,190,0.5);
}

/* Gradient Separator */
QFrame#gradientSeparator {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0,
                stop:0 rgba(37,150,190,0),
                stop:0.5 rgba(37,150,190,0.4),
                stop:1 rgba(37,150,190,0));
    border: none;
}

/* Stats Grid Enhancement */
QWidget#statsGrid {
    background: rgba(240,245,255,0.95);
    border-radius: 8px;
    padding: 10px;
}

/* Icon Button (Copy button in stats) */
QPushButton#iconButton {
    background: rgba(37,150,190,0.1);
    border: 1px solid rgba(37,150,190,0.25);
    border-radius: 6px;
    padding: 6px 10px;
    color: #1A5F8D;
    font-size: 14px;
}

QPushButton#iconButton:hover {
    background: rgba(37,150,190,0.2);
    border-color: rgba(37,150,190,0.4);
    color: #134A70;
}

QPushButton#iconButton:pressed {
    background: rgba(37,150,190,0.3);
}

/* Results Widget Container with Gradient */
QWidget#resultsWidget {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(240,245,255,0.95),
                stop:1 rgba(230,240,250,0.95));
    border-left: 2px solid rgba(37,150,190,0.2);
    border-radius: 0px 10px 10px 0px;
}

/* ===== Collapsible Splitter Styles ===== */

/* Collapsible Splitter Handle */
QSplitter#collapsibleSplitter::handle:horizontal {
    background: rgba(0,0,0,0.03);
    width: 16px;
}

/* Collapse Toggle Button */
QPushButton#collapseToggle {
    background: rgba(37,150,190,0.15);
    border: 1px solid rgba(37,150,190,0.3);
    border-radius: 4px;
    padding: 8px 2px;
    color: #1A5F8D;
    font-size: 12px;
    min-width: 14px;
    max-width: 14px;
}

QPushButton#collapseToggle:hover {
    background: rgba(37,150,190,0.25);
    border-color: rgba(37,150,190,0.5);
    color: #134A70;
}

QPushButton#collapseToggle:pressed {
    background: rgba(37,150,190,0.35);
}

/* ===== Detach/Attach Button Styles ===== */

/* Detach Button */
QPushButton#detachButton {
    background: rgba(37,150,190,0.1);
    border: 1px solid rgba(37,150,190,0.2);
    border-radius: 6px;
    padding: 4px 8px;
    color: #1A5F8D;
    font-size: 10px;
}

QPushButton#detachButton:hover {
    background: rgba(37,150,190,0.2);
    border-color: rgba(37,150,190,0.4);
    color: #134A70;
}

QPushButton#detachButton:pressed {
    background: rgba(37,150,190,0.3);
}

/* Attach Button (in floating window) */
QPushButton#attachButton {
    background: rgba(37,150,190,0.1);
    border: 1px solid rgba(37,150,190,0.2);
    border-radius: 6px;
    padding: 6px 12px;
    color: #1A5F8D;
    font-size: 12px;
}

QPushButton#attachButton:hover {
    background: rgba(37,150,190,0.2);
    border-color: rgba(37,150,190,0.4);
    color: #134A70;
}

/* Detached Map Window */
QMainWindow#detachedMapWindow {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1,
                stop:0 #e6ecef, stop:0.5 #bdd5df, stop:1 #a7c9da);
}

/* ===== Base Hover Overlay Styles ===== */

/* Hover Overlay Container */
QFrame#hoverOverlayContainer {
    background: rgba(255,255,255,0.98);
    border: 1px solid rgba(37,150,190,0.4);
    border-radius: 8px;
}

/* Hover Overlay Guild Label */
QLabel#hoverGuildLabel {
    color: #1A5F8D;
    font-weight: bold;
}

/* Hover Overlay Detail Labels */
QLabel#hoverDetailLabel {
    color: #4A5568;
}

/* ===== Search Panel Styling ===== */

/* Search input styling */
QLineEdit#searchInput {
    background-color: rgba(255,255,255,0.9);
    color: #1a1a1a;
    border: 1px solid rgba(0,0,0,0.15);
    border-radius: 4px;
    padding: 6px 10px;
    font-size: 13px;
}

QLineEdit#searchInput:focus {
    border: 1px solid rgba(37,150,190,0.5);
    background-color: #ffffff;
}

/* Search tree widget styling */
QTreeWidget#searchTree {
    background-color: rgba(255,255,255,0.9);
    color: #1a1a1a;
    border: 1px solid rgba(0,0,0,0.12);
    border-radius: 4px;
