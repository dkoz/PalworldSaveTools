}

/* ===== Detached Console Window Styles ===== */

/* Console close button */
QPushButton#consoleCloseBtn {
    background: transparent;
    color: #000000;
    font-size: 16px;
    font-weight: bold;
    border: none;
    padding: 5px;
}

QPushButton#consoleCloseBtn:hover {
    background: rgba(0,0,0,0.1);
    border-radius: 4px;
    color: #333333;
}

/* Console text edit */
QTextEdit#consoleTextEdit {
    background: rgba(255,255,255,0.95);
    color: #000000;
    border: 2px solid rgba(37,150,190,0.8);
    border-radius: 6px;
    padding: 8px;
    selection-background-color: rgba(37,150,190,0.3);
}

/* Console scrollbar */
QTextEdit#consoleTextEdit QScrollBar:vertical {
    background: rgba(255,255,255,0.8);
    width: 12px;
    border-radius: 6px;
    margin: 2px;
}

QTextEdit#consoleTextEdit QScrollBar::handle:vertical {
    background: rgba(37,150,190,0.4);
    border-radius: 4px;
    min-height: 20px;
}

QTextEdit#consoleTextEdit QScrollBar::handle:vertical:hover {
    background: rgba(37,150,190,0.6);
}

QTextEdit#consoleTextEdit QScrollBar::add-line:vertical,
QTextEdit#consoleTextEdit QScrollBar::sub-line:vertical {
    background: none;
    border: none;
}

QTextEdit#consoleTextEdit QScrollBar::up-arrow:vertical,
QTextEdit#consoleTextEdit QScrollBar::down-arrow:vertical {
    background: none;
    border: none;
}

QTextEdit#consoleTextEdit QScrollBar::add-page:vertical,
QTextEdit#consoleTextEdit QScrollBar::sub-page:vertical {
    background: none;
}
